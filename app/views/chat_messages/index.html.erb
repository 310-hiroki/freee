<h1>チャットアプリ</h1>
<p><%= @send_user.name %>さんとのトーク</p>

<div id='chat_messages'>
  <% @messages.each do |chat_message| %>
    <div><%= "#{chat_message.user_name}: #{chat_message.body}" %></div>
  <% end %>
</div>

<form>
  <label>
    発言する: <input type="text" data-behavior="speak_chat_messages">
  </label>
</form>

<%= link_to '戻る', users_path %>
<%= link_to 'ログアウト', logout_path, method: :delete %>
